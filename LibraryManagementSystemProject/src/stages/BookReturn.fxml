               </columns>
            </TableView>
            <Label fx:id="lblBooks" layoutX="417.0" layoutY="17.0" prefHeight="20.0" prefWidth="400.0" text="Select a Book in the table to be return from">
               <font>
                  <Font name="Segoe UI" size="12.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="anchorPaneIssue" layoutX="704.0" prefHeight="740.0" prefWidth="130.0">
         <children>
            <Button fx:id="btnBookReturn" layoutX="21.0" layoutY="701.0" mnemonicParsing="false" onMouseClicked="#btnBookIssueClicked" prefHeight="25.0" prefWidth="95.0" text="Return Book" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
