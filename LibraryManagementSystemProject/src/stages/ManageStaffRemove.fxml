            <Button fx:id="btnStaffAddRemove" layoutX="18.0" layoutY="552.0" mnemonicParsing="false" onMouseClicked="#btnStaffAddRemoveClicked" prefHeight="28.0" prefWidth="110.0" text="Remove Staff" />
