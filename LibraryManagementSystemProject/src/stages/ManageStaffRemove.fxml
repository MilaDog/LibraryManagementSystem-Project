         <children>
            <TableView fx:id="tblViewStaff" layoutX="18.0" layoutY="-40.0" prefHeight="580.0" prefWidth="800.0">
               <columns>
                  <TableColumn fx:id="colStaffID" prefWidth="100.0" resizable="false" text="StaffID" />
